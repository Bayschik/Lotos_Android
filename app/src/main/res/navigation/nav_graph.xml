<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="kg.geekspro.android_lotos.presentation.ui.main.MainFragment"
        android:label="Home"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_personalDataFragment"
            app:destination="@id/personalDataFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="kg.geekspro.android_lotos.presentation.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_personalDataFragment"
            app:destination="@id/personalDataFragment" />
    </fragment>

    <fragment
        android:id="@+id/aboutUsFragment"
        android:name="kg.geekspro.android_lotos.presentation.ui.aboutUs.AboutUsFragment"
        android:label="Search"
        tools:layout="@layout/fragment_about_us" />

    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="kg.geekspro.android_lotos.presentation.ui.onBoarding.OnBoardingFragment"
        android:label="fragment_on_boarding"
        tools:layout="@layout/fragment_on_boarding">
        <action
            android:id="@+id/action_onBoardingFragment_to_signOrLogFragment"
            app:destination="@id/signOrLogFragment" />
    </fragment>

    <fragment
        android:id="@+id/personalDataFragment"
        android:name="kg.geekspro.android_lotos.presentation.ui.profile.pesonalData.PersonalDataFragment"
        android:label="fragment_personal_data"
        tools:layout="@layout/fragment_personal_data">
        <action
            android:id="@+id/action_personalDataFragment_to_refactorDataFragment"
            app:destination="@id/refactorDataFragment" />
    </fragment>

    <fragment
        android:id="@+id/refactorDataFragment"
        android:name="kg.geekspro.android_lotos.presentation.ui.profile.pesonalData.RefactorDataFragment"
        android:label="fragment_refactor_data"
        tools:layout="@layout/fragment_refactor_data" />

    <fragment
        android:id="@+id/signOrLogFragment"
        android:name="kg.geekspro.android_lotos.presentation.ui.signOrLog.SignOrLogFragment"
        android:label="fragment_sign_or_log"
        tools:layout="@layout/fragment_sign_or_log">
        <action
            android:id="@+id/action_signOrLogFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/action_signOrLogFragment_to_logInFragment"
            app:destination="@id/logInFragment" />
    </fragment>

    <fragment
        android:id="@+id/splashFragment"
        android:name="kg.geekspro.android_lotos.presentation.ui.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_onBoardingFragment"
            app:destination="@id/onBoardingFragment" />
    </fragment>

    <fragment
        android:id="@+id/personalInfoFragment"
        android:name="kg.geekspro.android_lotos.presentation.ui.fragments.PersonalInfoFragment"
        android:label="fragment_personal_info"
        tools:layout="@layout/fragment_personal_info" />

    <fragment
        android:id="@+id/registrationFragment"
        android:name="kg.geekspro.android_lotos.presentation.ui.fragments.registration.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration">
        <action
            android:id="@+id/action_registrationFragment_to_verificationCodeFragment"
            app:destination="@id/verificationCodeFragment" />
    </fragment>

    <fragment
        android:id="@+id/verificationCodeFragment"
        android:name="kg.geekspro.android_lotos.presentation.ui.fragments.verificationCode.VerificationCodeFragment"
        android:label="fragment_verification_code"
        tools:layout="@layout/fragment_verification_code">

        <action
            android:id="@+id/action_verificationCodeFragment_to_fillDataFragment"
            app:destination="@id/fillDataFragment" />
    </fragment>

    <fragment
        android:id="@+id/logInFragment"
        android:name="kg.geekspro.android_lotos.presentation.ui.login.LogInFragment"
        android:label="fragment_log_in"
        tools:layout="@layout/fragment_log_in">
        <action
            android:id="@+id/action_logInFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>

    <fragment
        android:id="@+id/fillDataFragment"
        android:name="kg.geekspro.android_lotos.presentation.ui.fillData.FillDataFragment"
        android:label="fragment_fill_data"
        tools:layout="@layout/fragment_fill_data">
        <action
            android:id="@+id/action_fillDataFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>

    <fragment
        android:id="@+id/firstScreenFragment"
        android:name="kg.geekspro.android_lotos.presentation.ui.onBoarding.screens.FirstScreenFragment"
        android:label="fragment_first_screen"
        tools:layout="@layout/fragment_first_screen">
        <action
            android:id="@+id/action_firstScreenFragment_to_secondScreenFragment"
            app:destination="@id/secondScreenFragment"
            app:enterAnim="@animator/nav_default_enter_anim" />
    </fragment>

    <fragment
        android:id="@+id/secondScreenFragment"
        android:name="kg.geekspro.android_lotos.presentation.ui.onBoarding.screens.SecondScreenFragment"
        android:label="fragment_second_screen"
        tools:layout="@layout/fragment_second_screen">
        <action
            android:id="@+id/action_secondScreenFragment_to_thirdScreenFragment"
            app:destination="@id/thirdScreenFragment" />
    </fragment>

    <fragment
        android:id="@+id/thirdScreenFragment"
        android:name="kg.geekspro.android_lotos.presentation.ui.onBoarding.screens.ThirdScreenFragment"
        android:label="fragment_third_screen"
        tools:layout="@layout/fragment_third_screen">
        <action
            android:id="@+id/action_thirdScreenFragment_to_signOrLogFragment"
            app:destination="@id/signOrLogFragment" />
    </fragment>

    <fragment
        android:id="@+id/passwordCreateFragment"
        android:name="kg.geekspro.android_lotos.presentation.ui.profile.password.create.PasswordCreateFragment"
        android:label="fragment_password_create"
        tools:layout="@layout/fragment_password_create" />
    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="kg.geekspro.android_lotos.presentation.ui.profile.password.ChangePasswordFragment"
        android:label="fragment_change_password"
        tools:layout="@layout/fragment_change_password" />
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="kg.geekspro.android_lotos.presentation.ui.profile.password.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" />
    <fragment
        android:id="@+id/confirmPasswordFragment"
        android:name="kg.geekspro.android_lotos.presentation.ui.profile.password.ConfirmPasswordFragment"
        android:label="fragment_confirm_password"
        tools:layout="@layout/fragment_confirm_password" />

</navigation>